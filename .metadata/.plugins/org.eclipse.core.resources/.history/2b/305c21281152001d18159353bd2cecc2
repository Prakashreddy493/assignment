package pattern3;

public class Pattern3 {

	public static void main(String[] args)
	{
		int n=15;
		for(int i=0;i<n;i++) {
			for(int j=0;j<n;j++)
			{
				if(j==0&&i<n||
					/*i==0&&j<n||
					j==(n-1)&&i<n||
					i==(n-1)&&j<n)*/
				{
					System.out.print("*");
				}
				else
				{
					System.out.print(" ");
				}
				//System.out.println();
			}
		}

	}

}
